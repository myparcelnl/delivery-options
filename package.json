{
  "name": "@myparcel-do/monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "MyParcel delivery options module for checkouts.",
  "license": "MIT",
  "author": "Edie Lemoine <edie@myparcel.nl>",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "prettier": "@myparcel/prettier-config",
  "scripts": {
    "build": "nx exec -- nx run-many --runner=cloud --target=build",
    "build:dev": "nx exec -- run build:dev:base --runner=cloud",
    "build:dev:base": "nx run-many --target=build:dev",
    "clean": "nx run-many --target=clean",
    "lint": "nx affected --target=lint",
    "prepare": "is-ci || husky install",
    "serve": "run build:dev:base --output-style=stream npx concurrently yarn:watch yarn:serve:demo",
    "serve:demo": "nx serve admin-demo",
    "test": "nx run-many --target=test --output-style=stream",
    "test:run": "nx exec -- nx run-many --target=test:run --output-style=stream",
    "typecheck": "nx exec -- nx run-many --target=typecheck",
    "watch": "nodemon",
    "ws:clean": "cd $0 && rimraf lib dist coverage .eslintcache tsconfig.build.tsbuildinfo tsconfig.json",
    "ws:lint": "eslint --cache $0",
    "ws:test": "cd $0 && vitest",
    "ws:test:run": "cd $0 && (vitest run --coverage --dangerouslyIgnoreUnhandledErrors || true)",
    "ws:tsup:build": "cd $0 && tsup-node --minify",
    "ws:tsup:build:dev": "cd $0 && tsup-node --sourcemap",
    "ws:tsup:typecheck": "cd $0 && tsc --noEmit",
    "ws:tsup:watch": "cd $0 && tsup-node --sourcemap --watch",
    "ws:vite:build": "cd $0 && vite build",
    "ws:vite:build:dev": "cd $0 && vite build --mode development",
    "ws:vite:typecheck": "cd $0 && vue-tsc --noEmit",
    "ws:vite:watch": "cd $0 && vite build --mode development --watch"
  },
  "lint-staged": {
    "*.{js,vue,ts,tsx,jsx}": "eslint --fix",
    "*.{json,md,html,yml}": "prettier --write",
    "package.json": "npx -q sort-package-json"
  },
  "packageManager": "yarn@3.4.1",
  "devDependencies": {
    "@myparcel-eslint/eslint-config-esnext": "^1.2.0",
    "@myparcel-eslint/eslint-config-node": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript": "^1.2.0",
    "@myparcel-eslint/eslint-config-prettier-typescript-vue": "^1.2.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.2",
    "nx": "15.7.2"
  }
}
