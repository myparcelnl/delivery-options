{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "noEmitOnError": false,
    "paths": {
      "@myparcel-dev/delivery-options": ["./apps/delivery-options/src"],
      "@myparcel-dev/do-shared/testing": ["./libs/shared/src/__tests__"],
      "@myparcel-dev/do-*": ["./libs/*/src"]
    },
    "types": ["node", "vite/client"]
  },
  "include": [
    "apps/*/src/**/*",
    "libs/*/src/**/*"
  ],
  "exclude": [
    "**/*.snap",
    "**/*.spec.*",
    "**/*.test.*",
    "**/__mocks__",
    "**/__tests__",
    "**/__snapshots__",
    "**/dist",
    "**/node_modules"
  ]
}
