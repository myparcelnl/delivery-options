{
  "root": true,
  "extends": [
    "@myparcel/eslint-config/preset-vue"
  ],
  "rules": {
    "jsdoc/no-undefined-types": [
      "warn",
      {
        "definedTypes": [
          "MyParcel",
          "MyParcelDeliveryOptions",
          "Wrapper",
          "VNode",
          "webpack"
        ]
      }
    ],
    "vue/no-undef-components": [
      "error",
      {
        "ignorePatterns": [
          "RecursiveForm",
          "BCard",
          "BDropdownItem",
          "BInputGroupPrepend",
          "BInputGroupText",
          "BNavItemDropdown",
          "BSpinner",
          "BTab",
          "BTabs"
        ]
      }
    ]
  },
  "overrides": [
    {
      "extends": "@myparcel/eslint-config/preset-typescript",
      "files": [
        "**/*.ts"
      ]
    },
    {
      "files": [
        "**/*.spec.*"
      ],
      "rules": {
        "max-classes-per-file": "off",
        "max-lines-per-function": "off",
        "max-statements": "off",
        "no-magic-numbers": "off"
      }
    }
  ]
}
