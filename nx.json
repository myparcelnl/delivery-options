{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "myparcel-dev",
  "affected": {
    "defaultBase": "main"
  },
  "defaultBase": "main",
  "namedInputs": {
    "sharedGlobals": [
      "{workspaceRoot}/package.json",
      "{workspaceRoot}/yarn.lock",
      "{workspaceRoot}/tsconfig.*.json",
      "{projectRoot}/*.cjs",
      "{projectRoot}/*.html",
      "{projectRoot}/*.js",
      "{projectRoot}/*.json",
      "{projectRoot}/*.mjs",
      "{projectRoot}/*.ts",
      "{projectRoot}/private/**/*",
      "{projectRoot}/public/**/*",
      "{projectRoot}/src/**/*",
      "!{projectRoot}/release.config.cjs",
      "!{projectRoot}/histoire.*"
    ],
    "lint": [
      "test",
      "{workspaceRoot}/.eslintignore",
      "{workspaceRoot}/.eslintrc.cjs"
    ],
    "production": [
      "sharedGlobals",
      "!{projectRoot}/**/*.snap",
      "!{projectRoot}/**/*.spec.*",
      "!{projectRoot}/**/*.test.*",
      "!{projectRoot}/**/__mocks__/**/*",
      "!{projectRoot}/**/__tests__/**/*"
    ],
    "test": [
      "sharedGlobals",
      "{workspaceRoot}/libs/shared/src/__tests__/vitest-setup.ts"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/tsconfig.build.tsbuildinfo"
      ]
    },
    "build:dev": {
      "inputs": ["production", "^production"],
      "dependsOn": ["^build:dev"],
      "outputs": [
        "{projectRoot}/dist",
        "{projectRoot}/tsconfig.build.tsbuildinfo"
      ]
    },
    "lint": {
      "inputs": ["lint"],
      "outputs": ["{projectRoot}/.eslintcache"]
    },
    "lint:fix": {
      "inputs": ["lint"],
      "outputs": ["{projectRoot}/.eslintcache", "{projectRoot}/src/**/*"]
    },
    "test:coverage": {
      "inputs": ["test"],
      "outputs": ["{projectRoot}/coverage"]
    },
    "test:run": {
      "inputs": ["test"]
    },
    "test:update": {
      "inputs": ["test"],
      "outputs": ["{projectRoot}/src/__tests__/__snapshots__"]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:dev",
          "lint",
          "lint:fix",
          "test:run",
          "test:coverage"
        ],
        "parallel": 10
      }
    }
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  }
}
